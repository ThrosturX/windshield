@model IQueryable<Windshield.Models.Game>
<script src="@Url.Content("~/Scripts/GetPopularity.js")" type="text/javascript"></script>

<div id="index-button-group" class="row-fluid">
	<div class="span4 offset4">
		<div class="btn-group pagination-centered row-fluid" data-toggle="buttons-radio">
			<button type="button" class="btn">All</button>
			<button type="button" class="btn">Popular</button>
			<button type="button" class="btn">New</button>
		</div>
	</div>
</div>

<hr> <!-- horzontal divider -->

<div class="row-fluid">
	<ul class="thumbnails">
		@foreach (Windshield.Models.Game game in Model)
		{
		<li id="picture-list" class="span4">
			<a href="@Url.Action("GameDescription", "Home", new { name = game.name })">
				@Html.Partial("_GameImagePartial", game)
			</a>
		</li>
		}
	</ul>
</div>


<script id ="popularity-template" type ="text/html">
      
		<li id="picture-list-script" class="span4">
			<a href= "$.get('@Url.Action("GameDescription", "Home")', ${Name});"
				<img src ="/Images/${Image}" alt="${Name}" title="${Name}" />
			</a>
		</li>

</script>


