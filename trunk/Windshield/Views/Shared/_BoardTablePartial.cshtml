@model IQueryable<Windshield.Models.Board>

<table class="table table-hover">

	<thead>
		<tr>
			<th>
				Game ID
			</th>
			<th>
				Game
			</th>
		</tr>
	</thead>

	<tbody>
		@foreach (var board in Model)
		{
		<tr>
			<td>
				@board.id
			</td>
			<td>
				@Html.ActionLink(board.Game.name, "JoinLobby", "Games", new {targetId = @board.id}, null)
			</td>
		</tr>
		}	
	</tbody>

</table>