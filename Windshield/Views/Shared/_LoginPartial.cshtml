<ul class="nav nav-tabs pull-right user-bar">
@if (Request.IsAuthenticated)
{
	<li>
		@Html.ActionLink(User.Identity.Name, "ChangePassword", "Account", routeValues: null, htmlAttributes: new { @class = "username", title = "ChangePassword" })
	</li>
	<li>
		<a href="javascript:document.getElementById('logoutForm').submit()">Log out</a>
	</li>
}
else
{
	<li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
	<li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
}
</ul>

@using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "active" })) {
@Html.AntiForgeryToken()
}