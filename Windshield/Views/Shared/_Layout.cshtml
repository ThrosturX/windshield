<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">
						<img src="http://home.comcast.net/~budda63/knight_logo.gif" alt="logo" width="30px" />
						@Html.ActionLink("Codename Windshield", "Index", "Home")
                    </p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Popular games", "Index", "Home")</li>
                            <li>@Html.ActionLink("New Games", "Index", "Home")</li>
                            <li>@Html.ActionLink("All Games", "Index", "Home")</li>
							<li>@Html.ActionLink("Statistics", "Stats", "Home")</li>
							<li>@Html.ActionLink("My Games", "MyGames", "Home")</li>
							<li>@Html.ActionLink("TicTacToe","TicTacToe","Home")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
					@Html.ActionLink("About", "About", "Home")
                    <p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
