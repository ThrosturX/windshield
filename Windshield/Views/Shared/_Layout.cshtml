<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8" />
		<title>BoardGames Inc.</title>
		<!-- Bootstrap -->
		<link href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.1/css/bootstrap-combined.no-icons.min.css" rel="stylesheet">
		<link href="/Content/Site.css" rel="stylesheet">
		<link href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.1/css/bootstrap-responsive.min.css" rel="stylesheet">
		<script src="http://code.jquery.com/jquery.js"></script>
		<script src="js/bootstrap.min.js"></script>
		<script src="test.js"></script>

		<script src="~/Scripts/jquery.signalR-1.0.1.min.js"></script>
		<script src="~/signalr/hubs"></script>

		@if (IsSectionDefined("Scripts"))
		{
			@RenderSection("Scripts",false);	
		}
		@if (IsSectionDefined("Header"))
		{
			@RenderSection("Header",false);
		}

	</head>
	<body>
		<div class="container-narrow">
			
			<!-- HEADER -->

			<header id="overview" class="subhead">
				<div class="containter">
					<h1 class="hidden-phone">GameBoard</h1>
					<h1 class="visible-phone">
						Board
						Games
					</h1>
					<p class="lead hidden-phone">For all your gaming needs</p>
				</div>
				@Html.Partial("_LoginPartial")
			</header>

			<!-- NAVIGATION -->

			<div class="masthead">
				<ul class="nav nav-pills">
					<li>@Html.ActionLink("Games", "Index", "Home")</li>
					<li>@Html.ActionLink("Statistics", "Stats", "Home")</li>
					@if (User.Identity.IsAuthenticated)
					{
					<li>@Html.ActionLink("My Games", "MyGames", "Home")</li>
					<li>@Html.ActionLink("CARDS", "DisplayCard", "Home")</li>
					}
				</ul>

			</div>

			<!-- CONTENT -->

			<div class="container-fluid">
				@RenderBody()
			</div>

			
		</div> <!-- class="container-narrow" -->

		<!-- FOOTER -->

		<!--
			<footer>
				<p>Group 9</p>
				@Html.ActionLink("About", "About", "Home")
			</footer>
		-->

		<!-- SCRIPTS -->

		<!-- COMING SOON -->

</body>
</html>

