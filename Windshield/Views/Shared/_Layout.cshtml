<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<title>GameBoards Inc.</title>
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")
	@if (IsSectionDefined("Header"))
{
    @RenderSection("Header", false)
}
</head>


<body>

	<header>
		<div id="header">
			<div class="float-left">
				<p class="site-title">
					<!-- <img src="/Images/knight_logo.gif" alt="logo" width="30px" /> -->
					@Html.ActionLink("Codename Windshield", "Index", "Home")
				</p>
			</div>
			<div class="float-right">
				<section id="login">
					@Html.Partial("_LoginPartial")
				</section>
			</div>
		</div>
	</header>

	<div id="content">
	<nav>
		<ul id="menu">
			<li>@Html.ActionLink("Popular games", "Index", "Home")</li>
			<li>@Html.ActionLink("New Games", "Index", "Home")</li>
			<li>@Html.ActionLink("All Games", "Index", "Home")</li>
			<li>@Html.ActionLink("Statistics", "Stats", "Home")</li>
			<li>@Html.ActionLink("My Games", "MyGames", "Home")</li>
		</ul>
	</nav>
	
		@RenderSection("featured", required: false)
		<section class="content-wrapper main-content clear-fix">
			@RenderBody()
		</section>
	</div>
	<footer>
		<div class="content-wrapper">
			<div class="float-left">
				@Html.ActionLink("About", "About", "Home")
				<p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>
			</div>
		</div>
	</footer>

	@Scripts.Render("~/bundles/jquery")
	@RenderSection("scripts", required: false)
</body>
</html>
