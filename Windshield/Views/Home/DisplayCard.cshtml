@model Windshield.Common.CardDeck

@{
    Layout = null;
}
@{
	//ViewBag.Title = "Card animations";
}
	
<!DOCTYPE html>
	<html>
        <head>
				<link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
				<!--<script src="http://code.jquery.com/jquery.js"></script>
				<script src="js/bootstrap.min.js"></script>
				<script src="test.js"></script>
				<script src="~/Scripts/jquery.signalR-1.0.1.min.js"></script>
				<script src="~/signalr/hubs"></script> -->
				 <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.min.js" > </script>
				<script src="@Url.Content("~/Scripts/Card.js")" type="text/javascript"></script>
				<!--<script type="text/javascript" src="http://ajax.microsoft.com/ajax/jquery.templates/beta1/jquery.tmpl.min.js"></script> -->
                <title> Card animations </title>
        </head>
        <body> 
			<div id="stage">
			<div id="felt">
			
			@{
				int i = 1;
					foreach(var card in Model)
					{
						if(card.face > 1 && card.face <= 10)
						{
						//gice each card in our deck a unique identity
						<div id="card_@i" class="cardback rank_@card.face @card.suit"> <span class="spanDisplay" style="display:none;"> @card.face <br />  </span> </div>
						}
						
						else
						{
							switch (card.face)
							{
								case (1):
									<div id="card_@i" class="cardback rank_@card.face @card.suit"> <span class="spanDisplay" style="display:none;"> A <br /> </span> </div>
									break;
								case (11):
									<div id="card_@i" class="cardback rank_@card.face @card.suit"> <span class="spanDisplay" style="display:none;"> J <br /> </span> </div>	
									break;
								case (12):
									<div id="card_@i" class="cardback rank_@card.face @card.suit"> <span class="spanDisplay" style="display:none;"> Q <br /> </span> </div>	
									break;
								case (13):
									<div id="card_@i" class="cardback rank_@card.face @card.suit"> <span class="spanDisplay" style="display:none;"> K <br /> </span> </div>
									break;
								default:
									break;
							}
						}

						i++;
					}
			 }
				</div></div> 

		</body>
		</html> 