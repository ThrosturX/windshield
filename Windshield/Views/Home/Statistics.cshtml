@model IQueryable<Windshield.Models.Game>
<script src="@Url.Content("~/Scripts/GetStatistics.js")" type="text/javascript"></script>



<h2>Statistics</h2>

<hr>
<div class="row-fluid">
	<div class="pull-left">
		<p class="lead">Top Players</p>
	</div>
	<select id="dropdown" name="dropdown" class="pull-right">
		<option value="" selected="selected"> ... </option>
		@foreach (var game in Model)
		{
		<option value=@game.id>@game.name</option>
		}
	</select>
</div>

<table id="statistics" class="table table-hover">
		<thead>
			<tr>
				<th>Username</th>
				<th>Elo Rating</th>
				<th>Games Played</th>
				<th>Wins</th>
				<th>Losses</th>
			</tr>
		</thead>
	<tbody id="statistics-table-body">

	</tbody>

</table>

<script id ="statistics-table-row-template" type ="text/html">

			<tr class ="statistics-table-row">
				<td> ${Name}</td>
				<td> ${Rating} </td>
				<td> ${TimesPlayed} </td>
				<td>1337</td>
				<td>42</td>
			</tr>

</script>